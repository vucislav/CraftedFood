<body>
    <div class="white">
        <div class="form">
            <h1>Your orders</h1>
        </div>
        @foreach (var item in Model)
        {
            <div class="form">
                <div class="info text-center">
                    <span>Meal:&nbsp;</span><span>@item.MealTitle</span><br />
                    <span>Deliver to:&nbsp;</span><span>@item.CompanyName</span><br />
                    <span>Date:&nbsp;</span><span>@item.Date</span><br />
                    <span>Note:&nbsp;</span><span>@item.Note</span><br />
                    <span>Price:&nbsp;</span><span>@item.Price</span><br />
                </div>
            </div>
        }
    </div>

