<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>

    <link rel="stylesheet" href="~/Plugins/sign-up-login-form/css/normalize.css">

    <link rel="stylesheet" href="~/Plugins/sign-up-login-form/css/style.css">
    <style>
        input, li {
            max-width: 100%;
        }

        p {
            color: white;
        }
    </style>


</head>
<body>
    <div class="form">

        <h1>Reset Password</h1>
        <div id="forgot">
            <p>Enter your new password</p>
            <br />
            <form action="/Home/PasswordReset" method="post">

                <input type="hidden" name="Guid" value="@Model.Guid" />

                <div class="field-wrap">
                    <label>
                        New Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" name="NewPassword" />
                </div>

                <div class="field-wrap">
                    <label>
                        Repeat New Password<span class="req">*</span>
                    </label>
                    <input type="password" required autocomplete="off" name="NewPasswordConfirm" />
                </div>

                <button class="button button-block" />Reset your password</button>

            </form>
        </div>

    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Plugins/sign-up-login-form/js/index.js"></script>



</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
