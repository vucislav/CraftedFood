<div class="form">
    <h1>Add rating</h1>

    <form action="/Home/AddRating" method="post">

        <input type="hidden" value="@Model.UserId" name="UserId" />
        <input type="hidden" value="@Model.MealId" name="MealId" />

        <div class="field-wrap">
            <label>
                Mark<span class="req">*</span>
            </label>
        </div>
        <select name="Mark">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <div class="field-wrap">
            <label>
                Comment
            </label>
            <input type="text" required autocomplete="off" name="Comment" />
        </div>

        <button class="button button-block" />Create</button>

    </form>
</div>

